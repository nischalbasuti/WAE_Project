<style>

#user-detail {
  
    border: 2px solid grey;
    width: 600px;
    height: 670px;
    top: 50%;
    left: 50%;
    position: absolute;
    margin-top: -200px;
    margin-left: -270px;
    padding-top: 20px;
    padding-right: 30px;
    padding-bottom: 50px;
    padding-left: 20px;
}
</style>

<div class="alert alert-danger">

    <%= devise_error_messages! %>

</div>

<br>

<h3 class="text-center"><i class="fas fa-user-edit"></i> Edit profile</h3>

<br>

<h5 class="text-center"><i class="fas fa-angle-double-right"></i> <%= current_user.email %> <i class="fas fa-angle-double-left"></i></h5>



<div>

  <br>
    
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    
    <div class="form-group">
      <%= f.label :email , 'Email : '%> <%= current_user.email %><br />
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password , 'New password : '%> <br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' , placeholder: 'Leave blank if you do not want to change it' %>
      <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation , 'Confirm new password : ' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: 'form-control' , placeholder: 'Leave blank if you do not want to change it' %>
    </div>

    

    <div class="form-group">
      <%= f.label :current_password , 'Current your password : '%> <br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' , placeholder: 'We need your current password to confirm your changes' %>
    </div>

    <div class="actions">
      <%= f.submit "Update new password" , :class => 'btn btn-primary'%>
    </div>

  <% end %>
<br>
  <%= form_tag('/profile/update', :class => 'form') do %>

    <div class="form-group">
      <%= label_tag :nationality ,  'Nationality : ' %><br />
      <%= text_field_tag :nationality , "", class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= label_tag :department_id , 'Department :'%><br />
      <%= select_tag :department_id, options_for_select(Department.all.pluck(:name, :id).map do |n, i| [n,i] end) , :class=> "form-control" %>
    </div>

   <%= submit_tag "Update", :id => "submit", :name => "submit", :class => "form_submit btn btn-success", :disabled => false, :disable_with => "Please wait..." %>

  <% end %>


</div>


