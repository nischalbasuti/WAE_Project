<br>
  <%= form_tag('/profile/update', :class => 'form') do %>

    <div class="form-group">
      <!--       <%= label_tag :department_id , 'Department :'%><br /> -->
      <%= label_tag :department_id do %>
        <i class="fas fa-building"> </i> <b>Department :</b> 
      <% end %> <br />
      <%= select_tag :department_id, options_for_select(Department.all.pluck(:name, :id).map do |n, i| [n,i] end , :selected => current_user.department_id ) , :class=> "form-control" %>
    </div>

    <div class="form-group">
      <!-- <%= label_tag :nationality ,  'Nationality : ' %><br /> -->
      <!-- new label -->
      <%= label_tag :nationality do %>
        <i class="fas fa-flag"></i> <b>Nationality :</b> 
      <% end %> <br />
      <%= text_field_tag :nationality , current_user.nationality, class: 'form-control'%>
    </div>


    <%= button_tag(:id => "submit", :name => "submit", :class => "form_submit btn btn-success", :disabled => false, :disable_with => "Please wait...") do %>
      <i class="fas fa-pen"></i> Update your profile 
    <% end %>

  <% end %>


</div>


