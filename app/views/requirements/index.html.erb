<p id="notice"><%= notice %></p>

<h1>Requirements</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requirements.each do |requirement| %>
      <tr>
        <td><%= requirement.title %></td>
        <td><%= requirement.description %></td>
        <td> <%= link_to requirement.activity.name, requirement.activity %> </td>
        <td><%= link_to 'Show', requirement %></td>
        <% if current_user.representitive? requirement.event or current_user.privilage_level(requirement.event) >= 0 or current_user.admin? or current_user.chair? %>
            <td><%= link_to 'Edit', edit_requirement_path(requirement) %></td>
            <td><%= link_to 'Destroy', requirement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Requirement', new_requirement_path %>
