<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @event.start_time %>
</p>

<p>
  <strong>End time:</strong>
  <%= @event.end_time %>
</p>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>

<hr>

<%= link_to "Manage Event", '/events/manage?id='+@event.id.to_s %>

<br>
<% if current_user.user_events.where(user: current_user,event: @event).count == 0 %>
  <%= form_tag(:action => 'register', :class => 'form') do %>
    <%= hidden_field_tag 'user_id', current_user.id%>
    <%= hidden_field_tag 'event_id', @event.id%>
    <%= submit_tag "Register", :id => "submit", :name => "submit", :class => "form_submit", :disabled => false, :disable_with => "Please wait..." %>
  <% end %>
<% else %>
  Already Registered.
  <br>
  <%= form_tag(:action => 'unregister', :class => 'form') do %>
    <%= hidden_field_tag 'user_id', current_user.id%>
    <%= hidden_field_tag 'event_id', @event.id%>
    <%= submit_tag "UnRegister", :id => "submit", :name => "submit", :class => "form_submit", :disabled => false, :disable_with => "Please wait..." %>
  <% end %>
<% end %>

<hr>

<h4>Forums:</h4>

<%= link_to "Create New Forum", "/forums/new?event_id=#{@event.id}" %>

<ul>
    <% @event.forums.each do |forum| %>
        <li>
            <%= link_to forum.title, '/forums/'+forum.id.to_s %>
        </li>
    <% end %>
</ul>

