<!DOCTYPE html>
<html>
    <head>
        <title>Web1807</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

        <link href="https://fonts.googleapis.com/css?family=Abril+Fatface" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Coda" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Anton" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Nobile" rel="stylesheet" type="text/css">
    </head>

    <body>

        <div class="navbar navbar-default">

            <div class="container-fluid">

                <div class="navbar-header">
                    <%= link_to "Web07", "/" , :class => "navbar-brand"%>
                </div>

                <ul class="nav navbar-nav">
                    <li> <%= link_to "back", :back %> </li>
                    <% if user_signed_in? %>
                        <span class="navbar-text">
                            <%= current_user.email %>
                        </span>
                        <li>
                            <li>
                            <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
                            </li>
                        </li>
                        <li>
                        <%= link_to "Events", "/events" %>
                        </li>
                        <% if current_user.admin? %>
                            <li>
                            <%= link_to "Admin Page", "/user_management/index" %>
                            </li>
                        <% end %>
                        <% if current_user.admin? or current_user.chair? %>
                            <li>
                            <%= link_to "Events Management", "/events" %>
                            </li>
                        <% end %>
                    <% else %>
                        <li>
                        <%= link_to "Sign up", new_user_registration_path %>
                        </li>
                        <li>
                        <%= link_to "Sign in", new_user_session_path %>
                        </li>
                    <% end %>
                </ul>

            </div>

        </div>

        <div id="container">


           <div id="wrapper" class="container">

               <% if flash[:notice] %>
                   <div class="flash notice" style="color:green;">
                       <%= flash[:notice] %>
                   </div>
               <% end %>
               <% if flash[:alert] %>
                   <div class="flash alert" style="color:blue;">
                       <%= flash[:alert] %>
                   </div>
               <% end %>
               <% if flash[:error] %>
                   <div class="flash error" style="color:red;">
                       <%= flash[:error] %>
                   </div>
               <% end %>

              <%= yield %>
           </div>

        </div>

        <div class="panel-footer">
            <%= link_to "HTML Validator", "https://validator.w3.org/nu/?doc="+request.original_url %>
        </div>
    </body>
</html>
