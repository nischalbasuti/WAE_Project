

<h2 class="text-center"> <i class="fas fa-building"></i> Departments</h2>

<%= link_to '<button type="button" class="btn btn-info"><i class="fas fa-plus-circle"></i> New Department </button>'.html_safe, new_department_path %>  

<br><br>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="text-center" width="450px">Name</th>
      <th class="text-center" width="250px">Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.code %></td>
        <td><%= link_to '<button type="button" class="btn btn-primary"><i class="fas fa-edit"></i> Edit </button>'.html_safe, edit_department_path(department) %> </td>
        <td><%= link_to '<button type="button" class="btn btn-danger"><i class="fas fa-trash"></i> Destroy </button>'.html_safe, department , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

